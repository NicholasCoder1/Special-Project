<?php
// Database connection parameters
$servername = "your_server_name";
$username = "your_username";
$password = "your_password";
$dbname = "your_database_name";

// Initialize the prompt message variable
$promptMessage = "";

// Check if the form is submitted
if ($_SERVER["REQUEST_METHOD"] === "POST") {
    // Get the username and password entered by the user
    $enteredUsername = $_POST["username"];
    $enteredPassword = $_POST["password"];

    // Create a database connection
    $conn = new mysqli($servername, $username, $password, $dbname);

    // Check the connection
    if ($conn->connect_error) {
        die("Connection failed: " . $conn->connect_error);
    }

    // Query the database to retrieve the hashed password for the entered username
    $sql = "SELECT password_hash FROM users WHERE username = ?";
    $stmt = $conn->prepare($sql);
    $stmt->bind_param("s", $enteredUsername);
    $stmt->execute();
    $stmt->bind_result($hashedPassword);

    // Fetch the result
    $stmt->fetch();

    // Close the database connection
    $stmt->close();
    $conn->close();

    // Check if the entered password matches the hashed password
    if (password_verify($enteredPassword, $hashedPassword)) {
        // Successful login
        echo "Welcome to the protected area!";
        // You can redirect the user to another page or perform other actions here
    } else {
        // Incorrect password
        $promptMessage = "Incorrect username or password. Please try again.";
    }
}
?>



